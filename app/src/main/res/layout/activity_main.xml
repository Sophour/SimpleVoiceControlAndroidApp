<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sophour.voicecontrol.MainActivity">

    <TextView
        android:id="@+id/textView_onResultWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:layout_marginEnd="62dp"
        android:layout_alignBaseline="@+id/textView_onPartialWord"
        android:layout_alignBottom="@+id/textView_onPartialWord"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        android:text="Instruction"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_counters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_onPartialResult"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:text="OnPartialResult()   |           OnResult()"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_onPartialResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/textView_recognitionsTitle"
        android:layout_alignEnd="@+id/textView_onPartialWord"
        android:layout_marginEnd="17dp" />

    <TextView
        android:id="@+id/textView_onResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/textView_onPartialResult"
        android:layout_alignBottom="@+id/textView_onPartialResult"
        android:layout_toStartOf="@+id/textView_onResultWord" />

    <TextView
        android:id="@+id/textView_recognitionsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ui_recognized_word_title"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_onPartialWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:layout_marginTop="21dp"
        android:layout_marginStart="60dp"
        android:layout_below="@+id/textView_onPartialResult"
        android:layout_alignParentStart="true" />
</RelativeLayout>
